<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>SGS - Announcements</title>
    <link rel="stylesheet" href="bootstrap-4.1.3-dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="announcements.css">
    <link rel="stylesheet" href="fixed.css">
</head>

<body data-spy="scroll" data-target="#navbarResponsive">

    <!--- Start Home Section -->
    <div id="fixed"></div>
    <div id="announcements">

        <!--- Navigation -->
        <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
            <!--	<a class="navbar-brand" href="#"><img src="img/SGS1.png"></a> -->
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive">
                <span class="navbar-toggler-icon"></span>
            </button>


            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav mx-auto">
                    <!--md, mx, ml-->
                    <li class="nav-item">
                        <a class="nav-link" href="/profile">Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/announcements">Announcements</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/courses">Courses</a>
                    </li>
                    <li>
                        <a class="navbar-brand" href=""><img src="img/SGS1.png"></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/postTicket">HT</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/contacts">Contacts</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Logout</a>
                    </li>
                </ul>
            </div>
        </nav>
        <!--- End Navigation-->

        <!--- Start Landing Page Section -->
        <div class="caption text-center">
            <a href="#"><img src="img/SGS1.png"></a>
            <h1>Welcome to SGS</h1>
            <h3>The Student Guide System</h3>
            <div>
                <% articles.forEach(function(val) { %>
                    <div class="bd-highlight" style="border-radius: 30px;">
                        <div class="row justify-content-md-center">
                            <div class="col-lg-10 col-md-10 mt-2 mb-2 row">
                                <div class="card col-md-10 col-lg-8 card-holder">
                                    <div class="justify-content-start UserData mt-3">
                                        <img class="UserImage" src="/img/nopic.jpg" style="border-radius: 25px;">
                                        <p class="Username" style="white-space: pre-line;"><%= val.Course_Name %>
                                            <span><%= val.F_Name + " " + val.L_Name %></span></p>
                                    </div>
                                    <div class="card-body" style="padding: 0px;">
                                        <div class="card-title"
                                            style="color: white; text-align: left; white-space: pre-line;"><% if (val.ArticleText.length> 200 ) { %><%= val.ArticleText.substring(0,200) %>...<% } else { %><%= val.ArticleText %><% }%>
                                        </div>
                                    </div>
                                    <a href="/announcements/<%= val.ArticleID %>" class="btn btn-dark mb-3"
                                        style="width: fit-content; margin: auto;">More Info</a>


                                </div>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                        <!--- End Landing Page Section-->

            </div>
        </div>
        <br>
        <a href="Instructor_AddAnnouncements.html" class="btn btn-dark" style="width: fit-content; margin: auto;">Add announcement</a>
        <!--- End Home Section -->

        <!--- Script Source Files -->
        <script src="js/jquery-3.3.1.min.js"></script>
        <script src="bootstrap-4.1.3-dist/js/bootstrap.min.js"></script>
        <script src="https://use.fontawesome.com/releases/v6.2.1/js/all.js"></script>
        <!--- End of Script Source Files -->

</body>

</html>